generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  image     String?
  role      Role     @default(EDITOR)
  
  teamId    String?
  team      Team?    @relation(fields: [teamId], references: [id])
  
  sessions  Session[]
  accounts  Account[]
  notes     Note[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
  @@index([teamId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  token     String   @unique
  expiresAt DateTime
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([token])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type              String
  provider          String
  providerAccountId String?
  
  access_token      String?  @db.Text
  refresh_token     String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Team {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  
  users     User[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([slug])
}

model Contact {
  id              String    @id @default(cuid())
  name            String
  phone           String?
  email           String?
  whatsapp        String?
  twitterHandle   String?
  facebookId      String?
  
  tags            String[]
  customFields    Json?
  
  lastContactedAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  messages        Message[]
  notes           Note[]
  threads         Thread[]
  
  @@index([phone])
  @@index([email])
  @@index([whatsapp])
  @@index([lastContactedAt])
}

model Thread {
  id           String    @id @default(cuid())
  contactId    String
  contact      Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  lastActivity DateTime  @default(now())
  messages     Message[]
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  @@index([contactId])
  @@index([lastActivity])
}

model Message {
  id           String        @id @default(cuid())
  externalId   String?       @unique
  
  threadId     String?
  thread       Thread?       @relation(fields: [threadId], references: [id])
  
  contactId    String
  contact      Contact       @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  channel      Channel
  direction    Direction
  status       MessageStatus @default(PENDING)
  
  content      String        @db.Text
  mediaUrls    String[]
  
  metadata     Json?
  errorMessage String?
  
  scheduledFor DateTime?
  sentAt       DateTime?
  deliveredAt  DateTime?
  readAt       DateTime?
  
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  @@index([contactId])
  @@index([threadId])
  @@index([channel])
  @@index([direction])
  @@index([status])
  @@index([scheduledFor])
  @@index([createdAt])
}

model Note {
  id        String   @id @default(cuid())
  content   String   @db.Text
  isPrivate Boolean  @default(false)
  
  contactId String
  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([contactId])
  @@index([authorId])
  @@index([createdAt])
}

model Analytics {
  id               String   @id @default(cuid())
  date             DateTime @db.Date
  channel          Channel
  
  messagesSent     Int      @default(0)
  messagesReceived Int      @default(0)
  messagesFailed   Int      @default(0)
  
  avgResponseTime  Float    @default(0)
  uniqueContacts   Int      @default(0)
  conversions      Int      @default(0)
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@unique([date, channel], name: "date_channel")
  @@index([date])
  @@index([channel])
}

enum Role {
  VIEWER
  EDITOR
  ADMIN
}

enum Channel {
  SMS
  WHATSAPP
  EMAIL
  TWITTER
  FACEBOOK
  VOICE
}

enum Direction {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
  SCHEDULED
}